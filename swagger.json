  "components": {
    "schemas": {
        "Users": {
        "type": "object",
        "required": ["name","email", "password"],
        "properties": {
          "_id": {
            "type": "string",
            "description": "The auto-generated id of the user"
          },
          "name": {
            "type": "string",
            "description": "The name of the user",
            "example": "Bob"
          }, 
          "email": {
            "type": "string",
            "description": "User's email",
            "format": "email"
          },
          "password": {
            "type": "string",
            "description": "User's password",
            "example": "qwerty123"
          },
          "token": {
            "type": "string",
            "description": "The token of the user",
            "default": "null"
          },
          "balance": {
            "type": "integer",
            "description": "The balance of the user",
            "default": "0"
          },
          "createdAt": {
            "type": "string($date)",
            "description": "The date of the user creation",
            "example": "2022-02-12T05:49:05.406+00:00"
          },
          "updatedAt": {
            "type": "string($date)",
            "description": "The date of the user creation",
            "example": "2022-02-12T05:53:35.180+00:00"
          }


        }
      },
        "Transaction": {
        "type": "object",
        "required": ["typeTx","date", "month","year","sum","balance","categoryId","owner"],
        "properties": {
          "_id": {
            "type": "string",
            "description": "The auto-generated id of the user"
          },
          "typeTx": {
            "type": "string",
            "description": "The type of the transaction 'income' or 'expense'",
            "example": "income"
          }, 
          "date": {
            "type": "string($date)",
            "description": "The date of create transaction",
            "example": "2022-02-12T05:53:35.180+00:00"
          },
          "month": {
            "type": "Number",
            "description": "The month of create transaction",
            "example": "2"
          },
           "year": {
            "type": "Number",
            "description": "The month of create transaction",
            "example": "2022"
          },
          "sum": {
            "type": "Number",
            "description": "Value of 'income' or 'spend'",
            "example": "1000"
          },
          "balance": {
            "type": "number",
            "description": "Balance after transaction",
            "example": "25846"
          },
          "comment": {
            "type": "String",
            "description": "The comment to transaction",
            "example": "Gift to son"
          },
          "categoryId": {
            "type": "ObjectId",
            "description": "The category id of transaction",
            "example": "ObjectId('62074a5178fc6d0b79ccfc53')"
          },
           "owner": {
            "type": "ObjectId",
            "description": "The owner id of this transaction",
            "example": "ObjectId('62074a5178fc6d0b79ccfc53')"
          },
          "createdAt": {
            "type": "string($date)",
            "description": "The date of the transaction creation",
            "example": "2022-02-12T05:49:05.406+00:00"
          },
          "updatedAt": {
            "type": "string($date)",
            "description": "The date of the transaction creation",
            "example": "2022-02-12T05:53:35.180+00:00"
          }


        }
      },
        "Categories": {
        "type": "object",
        "required": ["nameCategory"],
        "properties": {
          "_id": {
            "type": "string",
            "description": "The auto-generated id of the user"
          },
          "nameCategory": {
            "type": "string",
            "description": "The name of the category",
            "example": "Разное"
          }, 
          "createdAt": {
            "type": "string($date)",
            "description": "The date of the transaction creation",
            "example": "2022-02-13T14:35:52.388Z"
          },
          "updatedAt": {
            "type": "string($date)",
            "description": "The date of the transaction creation",
            "example": "2022-02-13T14:35:52.388Z"
          }
        }
      }
    },
    "securitySchemes": {
      "Bearer": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
